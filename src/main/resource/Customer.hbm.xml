<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.kungfu.domain">
    <class name="com.kungfu.domain.Customer" table="t_customer">
        <id name="id" column="id">
            <generator class="native"></generator>
        </id>
        <property name="name" column="name" type="java.lang.String"></property>
        <!--表达一对多关系中的集合
            name：集合的属性名称
            inverse :是否维护反转给对方 默认:false
                                         true:在Customer中放弃维护
            cascade：级联操作
                save-update:级联保存，级联修改
                delete：删除a时同时删除b
                delete-orphan: 删除a时与b解除关系 a删除b存在
                all: save-update 和 delete整合
                all-delete-orphan:三个整合
        -->
        <set name="orders" inverse="false" cascade="all-delete-orphan">
            <key column="cid"/>
            <!--表达customer与orders时一对多关系-->
            <one-to-many class="Order"/>
        </set>
    </class>
</hibernate-mapping>
